extends ../layout/main

block variables
	- var title = "About"

block content
	include ../modules/_header
	section.about 
		.container 
			p.about__text Want to get in touch? Fill out the form below to send me a message and we will get back to you as soon as possible!
			form.form
				input.form__field(type="text", placeholder="Name")
				input.form__field(type="text", placeholder="E-mail")
				textarea.form__message(placeholder="Message")
				button.form__btn Send

	include ../modules/_footer

block script 
	script(src="static/js/main.js")
extends ../layout/main

block variables
	- var title = "About"

block content
	include ../modules/_header
	section.about 
		.container 
			p.about__text Want to get in touch? Fill out the form below to send me a message and we will get back to you as soon as possible!
			form.form
				.form__group
					label.form__error-text#name-error
					input.form__field.error(type="text", placeholder="Name")
				.form__group
					label.form__error-text#email-error
					input.form__field.error(type="text", placeholder="E-mail")
				.form__group
					label.form__error-text#message-error
					textarea.form__message.error(placeholder="Message")
				button.form__btn Send

	include ../modules/_footer

block script 
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js") 
	script(src="static/js/main.js")